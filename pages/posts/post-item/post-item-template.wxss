.post-container{
  display: flex;
  flex-direction: column;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  margin-top: 20rpx;
  /* padding: 10px; */
  margin-bottom: 40rpx;
  padding-bottom: 10rpx;
}
.post-info {
  /* margin-top: 10rpx; */
  margin: 10rpx 0 20rpx 0rpx;
  width: 100%;
  display: flex;
  align-items: center;
}
.avatar {
  margin-left: 10px;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  /* vertical-align: middle; */
}
.time {
  margin-left: 10px;
  font-size: 24rpx;
}
.post-title {
  margin-left: 20rpx;
  line-height: 56rpx;
}
.post-image{
  margin-top: 10px;
  width: 100%;
  height: 400rpx;
}
.post-graph{
  padding: 10px;
  font-size: 32rpx;
}
.post-like {
  margin-left: 10px;
  width: 100%;
  /* display: flex; */
  flex: row;
}
.visit-count{
  font-size: 24rpx;
}
.love-count{
  margin-left: 30px;
  font-size: 24rpx;
}