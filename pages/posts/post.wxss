.post-container{
  display: flex;
  flex-direction: column;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  margin-top: 20px;
  /* padding: 10px; */
}
.post-info {
  margin-top: 5px;
  width: 100%;
  flex: row;
}
.avatar {
  margin-left: 10px;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.time {
  margin-left: 10px;
  font-size: 24rpx;
}
.post-image{
  margin-top: 10px;
  width: 100%;
  height: 400rpx;
}
.post-graph{
  padding: 10px;
  font-size: 32rpx;
}
.post-like {
  margin-left: 10px;
  width: 100%;
  /* display: flex; */
  flex: row;
}
.visit-count{
  font-size: 24rpx;
}
.love-count{
  margin-left: 30px;
  font-size: 24rpx;
}