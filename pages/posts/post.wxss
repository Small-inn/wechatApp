swiper{
  width: 100%;
  height: 400rpx;
}
.img-container{
  width: 100%;
  height: 100%;
}
.img-item{
  width: 100%;
  height: 100%
}

.post-container{
  display: flex;
  flex-direction: column;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  margin-top: 40rpx;
  padding-bottom: 10rpx;
}
.post-info {
  margin: 10rpx 0 20rpx 0rpx;
  width: 100%;
  /* flex: row; */
  display: flex;
  align-items: center;
}
.avatar {
  margin-left: 10rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  /* vertical-align: middle; */
}
.time {
  margin-left: 10px;
  font-size: 24rpx;
}
.post-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  color: #333;
}
.post-image{
  width: 100%;
  height: 400rpx;
}
.post-graph{
  text-indent: 2em;
  padding: 0 20rpx;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  color: #666;
  margin: 20rpx 0 20rpx 0;
}
.post-like {
  margin-left: 20rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.visit {
  width: 32rpx;
  height: 32rpx;
}
.visit-count{
  margin-left: 20rpx;
  font-size: 24rpx;
}
.love {
  margin-left: 40rpx;
  width: 32rpx;
  height: 32rpx;
}
.love-count{
  margin-left: 20rpx;
  font-size: 24rpx;
}