@import "../movie/movie-tmpl.wxss";

.movie-list-container {
    background-color: #fff;
    display: flex;
    flex-direction: column;
}

.movie-head {
    padding: 30rpx 20rpx 22rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.slogan {
    font-size: 24rpx;
}

.more {
    float: right;
}

.more-text {
    font-size: 28rpx;
    /* vertical-align: middle; */
    margin-right: 10rpx;
    color: #1f4ba5;
}

.more-img {
    width: 9rpx;
    height: 16rpx;
    /* vertical-align: middle; */
}

.movies-container {
    display: flex;
    flex-direction: row;
}